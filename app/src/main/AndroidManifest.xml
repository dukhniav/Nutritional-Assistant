<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.nutritionalassistant">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".ShowMyRecipeActivity"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".ShowRecipeActivity"></activity>
        <activity android:name=".SettingsActivity"></activity>
        <activity android:name=".IngredientsActivity"></activity>
        <activity android:name=".MyRecipesActivity" />
        <activity
            android:name=".references.FoodStorage"
            android:label="@string/title_activity_food_storage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".references.FoodPreparation"
            android:label="@string/title_activity_food_preparation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".references.Utensils"
            android:label="@string/title_activity_utensils"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".references.NutritionalFacts"
            android:label="@string/title_activity_nutritional_facts"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ShowRecipesActivity" />
        <activity android:name=".EducationalReferencesActivity" />
        <activity android:name=".ShoppingListActivity" />
        <activity android:name=".FindRecipesActivity" />
        <activity android:name=".helper.ConvertToRecipes" />
        <activity android:name=".MainActivity" />
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".helper.ShoppingListAdapter"></activity>
    </application>

</manifest>