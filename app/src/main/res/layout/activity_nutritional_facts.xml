<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".references.NutritionalFacts">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Whitespace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/blank" />

            <ImageView
                android:id="@+id/healthyPlate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/healthyeatingplate" />

            <TextView
                android:id="@+id/plateIntro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/education_content_healthy_plate_intro" />

            <TextView
                android:id="@+id/plateExplanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/education_content_nutrition" />

            <TextView
                android:id="@+id/plateCitation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/healthy_plate_citation" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>