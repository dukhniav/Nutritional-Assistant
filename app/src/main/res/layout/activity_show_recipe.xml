<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ShowRecipeActivity">

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="309dp" android:id="@+id/showLayout"
            android:orientation="vertical"
            android:gravity="top" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0">
        <ImageView
                android:layout_height="match_parent"
                tools:layout_editor_absoluteY="101dp" tools:layout_editor_absoluteX="181dp"
                android:id="@+id/showRecipeImage" android:scaleType="fitEnd" android:textAlignment="center"
                android:layout_weight=".5" android:layout_width="match_parent"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/showRecipeTitle"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                tools:layout_editor_absoluteY="280dp" tools:layout_editor_absoluteX="136dp"
                android:layout_weight=".5"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="132dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.61">
        <Button
                android:text="Save Recipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/showRecipeSave"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="306dp"
            android:layout_height="83dp"
            android:id="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.382" app:layout_constraintVertical_bias="0.893">
        <TextView
                android:text="View Recipe At: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView15" android:layout_weight=".8"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                tools:layout_editor_absoluteX="229dp" android:id="@+id/showRecipeSource"
                tools:layout_editor_absoluteY="603dp" android:layout_weight=".6"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>