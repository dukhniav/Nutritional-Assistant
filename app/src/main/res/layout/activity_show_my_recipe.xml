<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowRecipeActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="309dp" android:id="@+id/showLayout"
        android:orientation="vertical"
        android:gravity="top" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/showMyRecipeImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:scaleType="fitEnd"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="181dp"
            tools:layout_editor_absoluteY="101dp" />

        <TextView
            android:id="@+id/showMyRecipeTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="280dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="132dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.61">

        <Button
            android:id="@+id/showMyRecipeDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Recipe" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="306dp"
        android:layout_height="83dp"
        android:id="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.382" app:layout_constraintVertical_bias="0.893">
        <TextView
            android:text="View Recipe At: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView15" android:layout_weight=".8"/>

        <TextView
            android:id="@+id/showMyRecipeSource"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_weight=".6"
            android:text="TextView"
            tools:layout_editor_absoluteX="229dp"
            tools:layout_editor_absoluteY="603dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>