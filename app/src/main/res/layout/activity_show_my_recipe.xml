<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ShowRecipeActivity">

    <ImageView
            android:layout_height="193dp"
            android:id="@+id/showMyRecipeImage"
            android:scaleType="centerCrop"
            android:textAlignment="center"
            android:layout_weight=".5"
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.428"
            android:adjustViewBounds="true"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:id="@+id/showMyRecipeTitle"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            android:background="@color/common_google_signin_btn_text_dark_pressed"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            android:backgroundTint="@color/common_google_signin_btn_text_light_focused"
            android:backgroundTintMode="screen" app:layout_constraintVertical_bias="0.31"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.641"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Calories"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView18" android:layout_weight=".8"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" android:id="@+id/showMyRecipeCalories"
                    android:layout_weight=".4"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="0.2">
            <TextView
                    android:text="Cooking Time"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView16"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:layout_weight=".5"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/showMyRecipeCook" android:layout_weight=".5"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.482">
            <TextView
                    android:text="View Recipe At: "
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView15" android:layout_weight=".5"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"/>
            <Button
                    android:text="Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/showMyRecipeSource" android:layout_weight=".8"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:background="@color/design_default_color_primary"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="112dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.986">
        <Button
                android:text="Show Ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/showMyRecipeIngredients"
                android:background="@color/design_default_color_primary"
                style="@style/Widget.AppCompat.Button.Colored" android:layout_weight=".45"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight=".2"/>
        <Button
                android:text="Delete Recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/showMyRecipeDelete"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@color/colorAccent" android:layout_weight=".45"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>